<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<servlet>
		<servlet-name>login</servlet-name>
		<jsp-file>/WEB-INF/views/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/restricted/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>testCsrf</servlet-name>
		<jsp-file>/WEB-INF/views/testCsrf.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>testCsrf</servlet-name>
		<url-pattern>/restricted/testCsrf</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>csrfUnpatched</servlet-name>
		<jsp-file>/WEB-INF/views/testCsrfUnpatched.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>csrfUnpatched</servlet-name>
		<url-pattern>/restricted/csrf/unpatched</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>testSql</servlet-name>
		<jsp-file>/WEB-INF/views/testSql.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>testSql</servlet-name>
		<url-pattern>/restricted/testSql</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>testXss</servlet-name>
		<jsp-file>/WEB-INF/views/testXss.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>testXss</servlet-name>
		<url-pattern>/restricted/testXss</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>setInsecureCookies</servlet-name>
		<jsp-file>/WEB-INF/views/testCookieStealing.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>setInsecureCookies</servlet-name>
		<url-pattern>/restricted/testCookieStealing</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>fraudWebsite</servlet-name>
		<jsp-file>/WEB-INF/views/fraudWebsite.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>fraudWebsite</servlet-name>
		<url-pattern>/restricted/fraudWebsite</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>iframe</servlet-name>
		<jsp-file>/WEB-INF/views/testClickJacking.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>iframe</servlet-name>
		<url-pattern>/restricted/testClickJacking</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>bankPortal</servlet-name>
		<jsp-file>/WEB-INF/views/bankPortal.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>bankPortal</servlet-name>
		<url-pattern>/restricted/bankPortal</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>sessionTimeOut</servlet-name>
		<jsp-file>/WEB-INF/views/sessionTimeOut.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>sessionTimeOut</servlet-name>
		<url-pattern>/sessionTimeOut</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>sessionFilter</filter-name>
		<filter-class>com.acc.filter.SessionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>sessionFilter</filter-name>
		<url-pattern>/restricted/*</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>painTest</web-resource-name>
			<url-pattern>/restricted/*</url-pattern>
			<url-pattern>/public/home</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>user</role-name>
			<role-name>admin</role-name>
			<role-name>root</role-name>
			<role-name>tomcat</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-role>
		<role-name>user</role-name>
	</security-role>

	<security-role>
		<role-name>admin</role-name>
	</security-role>

	<security-role>
		<role-name>root</role-name>
	</security-role>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>painTest</web-resource-name>
			<url-pattern>/restricted/admin</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/WEB-INF/views/login.jsp</form-login-page>
			<form-error-page>/WEB-INF/views/login.jsp</form-error-page>
		</form-login-config>
	</login-config>

